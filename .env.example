# Environment Configuration for Chef AI

# Model Training
MODEL_NAME=gpt2
BATCH_SIZE=4
LEARNING_RATE=5e-5
NUM_EPOCHS=3

# Paths
DATA_DIR=data/processed/cleaned
OUTPUT_DIR=models/checkpoints
FINAL_MODEL_DIR=models/final/chef_model

# Logging
LOG_LEVEL=INFO
TENSORBOARD_DIR=logs/tensorboard
WANDB_PROJECT=chef-ai
WANDB_API_KEY=your_wandb_api_key_here

# Optional: YouTube API for downloading transcripts
YOUTUBE_API_KEY=your_youtube_api_key_here

# Optional: HuggingFace Hub
HF_TOKEN=your_huggingface_token_here
HF_REPO_ID=your_username/chef-ai-model

# Hardware
DEVICE=cuda  # or cpu, mps (for Apple Silicon)
NUM_WORKERS=4
